/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow:hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 2px;
  color:indigo;
}

.btnbar {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10px;
  flex-direction: column;
}

.btn-bg{
  background:honeydew;
  color:#080808;
}

/* 通知 */
.notify {
  margin-top: 2px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color:crimson;
}

/* 课程表 */
.table{
  border-style: solid; 
  border-width: 4rpx; 
  border-color: #8A8A8A;
  margin-top: 5px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex-direction: column;
}

.tr{
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.td{
  width: 40%;
  justify-content: center;
  text-align: center;
}

.td-border{
  width: 40%;
  justify-content: center;
  text-align: center;
  border-left-style: solid; 
  border-left-width: 4rpx; 
  border-left-color: #8A8A8A;
  border-right-style: solid; 
  border-right-width: 4rpx; 
  border-right-color: #8A8A8A;
}

.bg-header{
  background:#FFE4B5;
}

.bg-items{
  background:#E6F3F9;
}

.th {
  width: 40%;
  color: #080808;
  display: inline-block;
  text-align: center;
}